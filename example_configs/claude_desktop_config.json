{
  "mcpServers": {
    "materialize": {
      "command": "/opt/homebrew/bin/uv",
      "args": [
        "run",
        "--project",
        "/Users/<name>/Projects/materialize-mcp",
        "materialize-mcp"
      ],
      "env": {
        "PGHOST": "127.0.0.1",
        "PGPORT": "6875",
        "PGUSER": "materialize",
        "PGDATABASE": "materialize",
        "PATH": "/opt/homebrew/bin:${PATH}"
      }
    }
  }
}

